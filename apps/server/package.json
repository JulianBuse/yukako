{
  "name": "@yukako/server",
  "type": "module",
  "bin": {
	"yukako": "./dist/index.mjs"
  },
  "files": [
	"dist"
  ],
  "scripts": {
	"typecheck": "tsc --noEmit",
	"build": "node scripts/build.mjs",
	"build:watch": "node scripts/build.mjs -w",
	"start": "node --enable-source-maps dist/index.mjs -c 1",
	"start:watch": "NODE_OPTIONS=\"--enable-source-maps\" nodemon dist/index.mjs -- -c 4 -s 'secret'",
	"dev": "concurrently -n build,run \"npm run build:watch\" \"npm run start:watch\""
  },
  "dependencies": {
	"@yukako/admin": "*",
	"@yukako/proxy": "*",
	"@yukako/engine": "*",
	"@yukako/leader": "*",
	"@yukako/cli": "*",
	"@yukako/state": "*"
  }
}
